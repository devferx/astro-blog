---
import { Image, Picture } from "astro:assets";

import MainLayout from "@/layouts/MainLayout.astro";

import post05Img from "@/assets/images/post-05.png";
---

<MainLayout title="Imagenes">
  <h1 class="text-5xl text-white">Imágenes</h1>

  <img
    loading="eager"
    src="/assets/images/post-05.png"
    width="250"
    height="250"
  />

  <Image src={post05Img} width="250" height="250" alt="Imagen del post" />
  <Image
    style={{ width: "250px", height: "250px" }}
    src={post05Img}
    width="500"
    height="500"
    alt="Imagen del post"
  />

  <h1 class="text-white">Quality low</h1>
  <Image
    quality="low"
    src={post05Img}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1 class="text-white">Quality high</h1>
  <Image
    quality="high"
    src={post05Img}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1 class="text-white">Formatos</h1>
  <Image
    format="jpg"
    src={post05Img}
    width="250"
    height="250"
    alt="Imagen del post"
  />
  <Image
    format="avif"
    src={post05Img}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1 class="text-white">Formatos</h1>
  <Picture
    formats={["webp", "avif", "jpeg"]}
    src={post05Img}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <h1 class="text-white">Tamaños</h1>
  <Picture
    widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
    src={post05Img}
    width="250"
    height="250"
    alt="Imagen del post"
  />
  <h1 class="text-white">Densidades</h1>
  <Picture
    width={post05Img.width / 2}
    densities={[1.5, 2]}
    src={post05Img}
    width="250"
    height="250"
    alt="Imagen del post"
  />

  <div class="h-[3000px]"></div>

  <img
    src="/assets/images/post-01.png"
    width="250"
    height="250"
    loading="lazy"
  />
</MainLayout>
